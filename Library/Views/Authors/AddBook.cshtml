@{
  Layout = "_Layout";
}

@model Library.Models.Author

<h2>Add an author to a book</h2>

<h4>Add an author to this book: @Html.DisplayFor(model => model.AuthorName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.AuthorId)

    @Html.Label("Select a book")
    @Html.DropDownList("BookId")

    <input type="submit" value="Save" />
}
<br>
<p>Don't see a book? Add one <a href="/Books/Create">here</a>.</p><br>

<p>@Html.ActionLink("Back to list", "Index", null, null, new { @class="btn btn-outline-dark btn-block"})</p>