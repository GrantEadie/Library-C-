@{
  Layout = "_Layout";
}

@model Library.Models.Genre

<h2>Add a book</h2>

<h4>Add a book to this genre: @Html.DisplayFor(model => model.GenreName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.GenreId)

    @Html.Label("Select a book")
    @Html.DropDownList("BookId")

    <input type="submit" value="Save"/>
}

<p>@Html.ActionLink("Back to list", "Index", null, null, new {  @class="btn btn-outline-dark btn-block" })</p>